<section class="flex flex-col -mx-8 md:-mx-20 {{params.color}} my-14 py-8">
<h2 class="nysds-text-36 font-extrabold text-black text-center mb-4 w-full">{{params.title}}</h2>
<p class="text-black mx-8 md:mx-20 justify-center self-center mb-4 max-w-2xl text-center">{{params.description}}</p>
<div class="flex flex-col lg:flex-row flex-wrap lg:flex-nowrap items-center lg:justify-center ">
{% for item in params.iconcards %}
<div class="my-4 mx-8 flex flex-col p-2 w-2/3 md:w-64 ">
<div class="mb-8 text-center">
<img class="m-auto object-scale-down max-h-36" src="{{item.icon}}" alt="{{item.iconalt}}" />
</div>
{%if item.titlelink%} 
<h3 class="font-bold text-xl text-center mb-2">
    <a href="{{item.titlelink}}" class="text-ny-links no-underline hover:underline">{{item.title}}</a>
</h3>
{% else %}
<h3 class="font-bold text-xl text-center text-black mb-2">
{{item.title}}
</h3>
{%endif%}
</h3>
<p class="text-black text-center">{{item.content}}</p>
</div>
{% if params.process %}
<div class="nysds-arrow-right "><span class="sr-only"> An arrow pointing to the right indicating the next step in this process </span></div>
{% endif %}
{% endfor %}
</div>
<div class="flex justify-center mt-8">
{% if params.ctalink%}
<a class="bg-admin-first text-white visited:text-white uppercase no-underline hover:bg-black hover:underline focus:bg-black focus:underline mb-8 p-4 rounded-xl  font-bold text-center m-auto lg:m-0 w-1/2 md:w-1/3 lg:w-1/4" href="{{params.ctalink}}" {%if params.ctaaria%} aria-label="{{params.ctaaria}}"{%endif%}>{{params.cta}}</a>{%endif%}
</div>
</section>